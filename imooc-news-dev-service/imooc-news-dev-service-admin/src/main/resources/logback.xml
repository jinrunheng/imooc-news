<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 指定日志文件的存储地址，使用绝对路径 -->
    <property name="LOG_HOME" value="/Users/macbook/Desktop/data/log/imooc-news-dev/service-admin"/>

    <!-- 控制台的输出设置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--格式化输出：%d：日期，%thread：线程名，%-5level：级别从左显示5个字符宽度；%msg：日志消息；%n：换行符-->
            <pattern>%white(%d{mm:ss.SSS}) %green([%thread]) %cyan(%-5level) %yellow(%logger{36}) %magenta(-)
                %black(%msg%n)
            </pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- 日志文件的输出设置，按照每天生成一个日志文件，并最多保存 30 天的日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件输出的文件名 -->
            <fileNamePattern>${LOG_HOME}/service-admin.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--打印级别，TRACE,DEBUG,INFO,WARN,ERROR,ALL,OFF；默认的级别为 DEBUG-->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>